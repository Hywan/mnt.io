    <script>
      Hoa.Document.onReady(function ( ) {

          var tex = Hoa.$$('[data-type="tex"]');

          tex.hoa.forEach(function ( i ) {

              tex[i].innerHTML = katex.renderToString(
                  tex[i].textContent.trim()
              );
          });
      });
    </script>
